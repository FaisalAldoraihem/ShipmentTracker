<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/no_archived_shipments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:contentDescription="@string/no_Archived_shipments"
        android:text="@string/no_Archived_shipments"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/archived_shipments"
        app:layout_constraintStart_toStartOf="@+id/archived_shipments"
        app:layout_constraintTop_toTopOf="@+id/archived_shipments" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/archived_shipments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/archive_content_des"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>